{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-alert": "off",
    "no-console": "off",
    "import/extensions": ["error", "always"],
    "max-depth": ["error", 2],
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "class-methods-use-this": "off",
    "no-unused-vars": "warn"
  }
}
